{
  "name": "elm-tailwind",
  "version": "1.0.0",
  "description": "Elm project with Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/output.css",
    "build:elm": "elm make src/Main.elm --output=dist/main.js",
    "build": "npm run build:css && npm run build:elm",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./dist/output.css --watch",
    "watch:elm": "elm-watch hot",
    "dev": "npm-run-all --parallel watch:css watch:elm",
    "clean": "rm -rf dist elm-stuff"
  },
  "keywords": [
    "elm",
    "tailwind"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "elm": "^0.19.1-6",
    "elm-watch": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.0"
  }
}
